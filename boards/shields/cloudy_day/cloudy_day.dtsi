#include "cloudy_day-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    matrix_transform0: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <4>;
        map = <
            /* Row 0: 12 keys (left 6 + right 6) */
            RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)
            RC(0,8)  RC(0,9)  RC(0,10) RC(0,11) RC(0,12) RC(0,13)
        
            /* Row 1: 12 keys */
            RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)
            RC(1,8)  RC(1,9)  RC(1,10) RC(1,11) RC(1,12) RC(1,13)
        
            /* Row 2: 12 keys */
            RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)  RC(2,5)
            RC(2,8)  RC(2,9)  RC(2,10) RC(2,11) RC(2,12) RC(2,13)
        
            /* Row 3: 10 keys, starting at col 2 (0-indexed)
               left:  cols 2,3,4,5 + solo col 6
               right: solo col 7, then normal cols 8,9,10,11
            */
            RC(3,2)  RC(3,3)  RC(3,4)  RC(3,5)  RC(3,6)
            RC(3,7)  RC(3,8)  RC(3,9)  RC(3,10) RC(3,11)
        >;
    };
};

&physical_layout_cloudy_day {
    transform = <&matrix_transform0>;
};

// Input devices
/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        input_split_right0: input_split_right0@0 {
            compatible = "zmk,input-split";
            reg = <0>;
            status = "disabled";
        };
    };

    input_listener_right0: input_listener_right0 {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&input_split_right0>;
    };
};

